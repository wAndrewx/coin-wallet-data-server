{
  "compilerOptions": {
    "module": "CommonJS",
    "target": "ES6",
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "./build/",
    "allowJs": true,
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "lib": [
      "dom",
      "es6",
      "ES2015"
    ],
    "baseUrl": "./",
    "paths": {
      "@/*": [
        "./*"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./*.ts",
    "tests/*.spec.ts"
  ]
}